{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "noImplicitAny": true
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "ex", "docs"]
}
